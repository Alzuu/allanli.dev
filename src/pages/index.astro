---
import { Image } from 'astro:assets';
import catGif from '../images/cats.gif';
import Layout from '../layouts/Layout.astro';

---

<Layout title="allanli.dev">
	<main>
		<h1>welcome to allanli.dev</h1>
		<p class="introduction">
			dear guest, you've stumbled upon my personal portfolio website. welcome! 👋🏼
			<br />
			this site is currently under construction, so enjoy this gif of my cats while you're here 😸
		</p>
		<Image src={catGif} alt="cats" title="Cats" class="gif" />
	</main>
</Layout>

<style>
	main {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		width: 100vw;
		height: 100dvh;
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}

	.introduction {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		padding: 1.5rem;
		border-radius: 8px;
		text-align: center;
	}

	.gif {
		border-radius: 1rem;
		width: 80%;
		max-width: 600px;
		height: auto;
	}
</style>
